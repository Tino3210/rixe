<Window x:Class="Rixe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rixe"
        mc:Ignorable="d"
        Title="Rixe" Height="700" Width="550">
    <Canvas Name="MyCanvas" Focusable="True" Background="Black" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <Rectangle Name="MyPlayer" Width="50" Height="60" Fill="Yellow" Canvas.Left="250" Canvas.Top="525" />
        <Rectangle Name="MyHeart1" Width="30" Height="30" Fill="Red" Canvas.Left="5" Canvas.Top="5" />
        <Rectangle Name="MyHeart2" Width="30" Height="30" Fill="Red" Canvas.Left="40" Canvas.Top="5" />
        <Rectangle Name="MyHeart3" Width="30" Height="30" Fill="Red" Canvas.Left="75" Canvas.Top="5" />
    </Canvas>
</Window>
